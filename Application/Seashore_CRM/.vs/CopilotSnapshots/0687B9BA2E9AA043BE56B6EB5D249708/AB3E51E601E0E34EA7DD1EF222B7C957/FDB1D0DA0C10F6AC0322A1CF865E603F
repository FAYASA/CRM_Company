using seashore_CRM.DAL.Repositories;
using seashore_CRM.Models.Entities;
using System.Collections.Generic;
using System.Threading.Tasks;

namespace seashore_CRM.BLL.Services
{
    public class LeadService : ILeadService
    {
        private readonly IUnitOfWork _uow;

        public LeadService(IUnitOfWork uow)
        {
            _uow = uow;
        }

        public async Task AddLeadAsync(Lead lead)
        {
            await _uow.Leads.AddAsync(lead);
            await _uow.CommitAsync();
        }

        public async Task DeleteLeadAsync(int id)
        {
            var lead = await _uow.Leads.GetByIdAsync(id);
            if (lead == null) return;
            _uow.Leads.Remove(lead);
            await _uow.CommitAsync();
        }

        public async Task<IEnumerable<Lead>> GetAllLeadsAsync()
        {
            return await _uow.Leads.GetAllAsync();
        }

        public async Task<Lead?> GetLeadByIdAsync(int id)
        {
            return await _uow.Leads.GetByIdAsync(id);
        }

        public async Task UpdateLeadAsync(Lead lead)
        {
            _uow.Leads.Update(lead);
            await _uow.CommitAsync();
        }
    }
}
