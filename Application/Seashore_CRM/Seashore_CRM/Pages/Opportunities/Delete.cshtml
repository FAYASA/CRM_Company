@page "{id:int}"
@model Seashore_CRM.Pages.Opportunities.DeleteModel
@{
    ViewData["Title"] = "Delete Opportunity";
}

<h1>Delete Opportunity</h1>

<h3>Are you sure you want to delete this opportunity?</h3>
<div>
    <h4>@Model.Opportunity.Stage</h4>
    <p>@Model.Opportunity.EstimatedValue</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Opportunity.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>