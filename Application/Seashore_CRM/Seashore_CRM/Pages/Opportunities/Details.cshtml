@page "{id:int}"
@model Seashore_CRM.Pages.Opportunities.DetailsModel
@{
    ViewData["Title"] = "Opportunity Details";
}

<h1>Opportunity Details</h1>

<div>
    <h4>Opportunity #@Model.Opportunity.Id</h4>
    <dl class="row">
        <dt class="col-sm-2">Lead</dt>
        <dd class="col-sm-10">@Model.Opportunity.LeadId</dd>

        <dt class="col-sm-2">Stage</dt>
        <dd class="col-sm-10">@Model.Opportunity.Stage</dd>

        <dt class="col-sm-2">Estimated Value</dt>
        <dd class="col-sm-10">@Model.Opportunity.EstimatedValue</dd>

        <dt class="col-sm-2">Probability</dt>
        <dd class="col-sm-10">@Model.Opportunity.Probability %</dd>

        <dt class="col-sm-2">Expected Close</dt>
        <dd class="col-sm-10">@Model.Opportunity.ExpectedCloseDate</dd>
    </dl>

    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>