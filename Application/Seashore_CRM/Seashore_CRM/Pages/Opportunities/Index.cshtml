@page
@model Seashore_CRM.Pages.Opportunities.IndexModel
@{
    ViewData["Title"] = "Opportunities";
}

<h1>Opportunities</h1>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search stage or lead id" />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
    <div class="col-auto">
        <a asp-page="Create" class="btn btn-success">+ New Opportunity</a>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Lead</th>
            <th>Stage</th>
            <th>Estimated Value</th>
            <th>Probability</th>
            <th>Expected Close</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var o in Model.Opportunities)
    {
        <tr>
            <td>@o.Id</td>
            <td>@o.LeadId</td>
            <td>@o.Stage</td>
            <td>@o.EstimatedValue.ToString("N2")</td>
            <td>@o.Probability %</td>
            <td>@(o.ExpectedCloseDate?.ToString("yyyy-MM-dd") ?? "-")</td>
            <td>
                <a asp-page="Details" asp-route-id="@o.Id" class="btn btn-sm btn-outline-primary">Details</a>
                <a asp-page="Edit" asp-route-id="@o.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                <a asp-page="Delete" asp-route-id="@o.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                <a class="page-link" asp-route-pageNumber="@i" asp-route-search="@Model.Search">@i</a>
            </li>
        }
    </ul>
</nav>