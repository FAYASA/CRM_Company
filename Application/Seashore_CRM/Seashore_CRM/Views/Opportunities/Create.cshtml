@model seashore_CRM.Models.Entities.Opportunity

@{
    ViewData["Title"] = "Create Opportunity";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="LeadId" class="form-label">Lead</label>
                    <input asp-for="LeadId" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="EstimatedValue" class="form-label">Estimated Value</label>
                    <input asp-for="EstimatedValue" class="form-control" />
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-link">Cancel</a>
            </div>
        </form>
    </div>
</div>
