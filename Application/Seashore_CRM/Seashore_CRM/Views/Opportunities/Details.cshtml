@model seashore_CRM.Models.Entities.Opportunity

@{
    ViewData["Title"] = "Opportunity Details";
}

<h1>Opportunity Details</h1>

<div>
    <h4>Opportunity #@Model.Id</h4>
    <dl class="row">
        <dt class="col-sm-2">Lead</dt>
        <dd class="col-sm-10">@Model.LeadId</dd>

        <dt class="col-sm-2">Stage</dt>
        <dd class="col-sm-10">@Model.Stage</dd>

        <dt class="col-sm-2">Estimated Value</dt>
        <dd class="col-sm-10">@Model.EstimatedValue</dd>

        <dt class="col-sm-2">Probability</dt>
        <dd class="col-sm-10">@Model.Probability %</dd>

        <dt class="col-sm-2">Expected Close</dt>
        <dd class="col-sm-10">@Model.ExpectedCloseDate</dd>
    </dl>

    <form asp-action="CreateFromOpportunity" asp-controller="Sales" method="get" class="d-inline">
        <input type="hidden" name="opportunityId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Create Sale from Opportunity</button>
    </form>

    <a asp-action="Index" asp-controller="Leads" class="btn btn-secondary">Back to Leads</a>
</div>