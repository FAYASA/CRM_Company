@model seashore_CRM.Models.Entities.Opportunity

@{
    ViewData["Title"] = "Opportunity Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <h4 class="mb-2">Opportunity #@Model.Id</h4>
        <dl class="row">
            <dt class="col-sm-3 text-muted">Lead</dt>
            <dd class="col-sm-9">@Model.LeadId</dd>

            <dt class="col-sm-3 text-muted">Stage</dt>
            <dd class="col-sm-9">@Model.Stage</dd>

            <dt class="col-sm-3 text-muted">Estimated Value</dt>
            <dd class="col-sm-9">@Model.EstimatedValue</dd>

            <dt class="col-sm-3 text-muted">Probability</dt>
            <dd class="col-sm-9">@Model.Probability %</dd>

            <dt class="col-sm-3 text-muted">Expected Close</dt>
            <dd class="col-sm-9">@Model.ExpectedCloseDate</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <form asp-action="CreateFromOpportunity" asp-controller="Sales" method="get" class="d-inline">
                <input type="hidden" name="opportunityId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Create Sale from Opportunity</button>
            </form>
            <a asp-action="Index" asp-controller="Leads" class="btn btn-link">Back to Leads</a>
        </div>
    </div>
</div>