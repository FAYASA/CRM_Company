@model seashore_CRM.Models.Entities.Sale

@{
    ViewData["Title"] = "Sale Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <h4>Sale #@Model.Id</h4>
        <dl class="row">
            <dt class="col-sm-3 text-muted">Opportunity</dt>
            <dd class="col-sm-9">@Model.OpportunityId</dd>

            <dt class="col-sm-3 text-muted">Sale Date</dt>
            <dd class="col-sm-9">@Model.SaleDate</dd>

            <dt class="col-sm-3 text-muted">Total</dt>
            <dd class="col-sm-9">@Model.TotalAmount</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>