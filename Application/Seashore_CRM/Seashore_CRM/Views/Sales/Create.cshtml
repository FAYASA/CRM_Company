@model seashore_CRM.Models.Entities.Sale

@{
    ViewData["Title"] = "Create Sale";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:1000px;">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="OpportunityId" class="form-label">Opportunity</label>
                    <input asp-for="OpportunityId" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="SaleDate" class="form-label">Sale Date</label>
                    <input asp-for="SaleDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="TotalAmount" class="form-label">Total</label>
                    <input asp-for="TotalAmount" class="form-control" />
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-link">Cancel</a>
            </div>
        </form>
    </div>
</div>
