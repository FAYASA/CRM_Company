@model seashore_CRM.Models.DTOs.CompanyUpdateDto

@{
    ViewData["Title"] = "Edit Company";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="card shadow-sm mx-auto form-container" style="max-width: 900px;">

        <!-- Header -->
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-building me-2"></i>
                Update Company Details
            </h5>
        </div>

        <!-- Body -->
        <div class="card-body">
            <form asp-action="Edit" method="post" id="companyForm">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RowVersion" />

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <!-- Company Name -->
                    <div class="col-md-6">
                        <label asp-for="CompanyName" class="form-label fw-semibold required"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-building"></i></span>
                            <input asp-for="CompanyName" class="form-control" />
                        </div>
                        <span asp-validation-for="CompanyName" class="text-danger small"></span>
                    </div>

                    <!-- City -->
                    <div class="col-md-6">
                        <label asp-for="City" class="form-label fw-semibold required"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                            <input asp-for="City" class="form-control" />
                        </div>
                        <span asp-validation-for="City" class="text-danger small"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold required"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Website -->
                    <div class="col-md-6">
                        <label asp-for="Website" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-globe"></i></span>
                            <input asp-for="Website" class="form-control" />
                        </div>
                        <span asp-validation-for="Website" class="text-danger small"></span>
                    </div>

                    <!-- Industry Dropdown -->
                    <div class="col-md-6">
                        <label asp-for="Industry" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-briefcase"></i></span>
                            <select asp-for="Industry" class="form-select">
                                <option value="">-- Select Industry --</option>
                                <option>Construction & Contracting</option>
                                <option>Electrical Trading</option>
                                <option>Switchgear & Panels</option>
                                <option>Power Solutions</option>
                                <option>Automation & Control Systems</option>
                                <option>Lighting Solutions</option>
                                <option>General Trading</option>
                                <option>Import & Export</option>
                                <option>Equipment Rental & Logistics</option>
                                <option>Cooling & Air Conditioning</option>
                                <option>IT Solutions & Technology Services</option>
                                <option>Steel & Metals</option>
                                <option>Cement & Building Materials</option>
                                <option>Petrochemicals</option>
                                <option>Industrial Equipment</option>
                                <option>Fabrication & Assembly</option>
                                <option>Shipping & Freight</option>
                                <option>Warehousing</option>
                                <option>Consulting & Solutions</option>
                                <option>Facility Management</option>
                                <option>Sports & Media</option>
                                <option>Education & Training</option>
                                <option>Healthcare Services</option>
                                <option>Hospitality & Tourism</option>
                                <option>Real Estate</option>
                                <option>Insurance & Finance</option>
                                <option>Other</option>
                            </select>
                        </div>
                        <span asp-validation-for="Industry" class="text-danger small"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-12">
                        <label asp-for="Address" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-house"></i></span>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                        </div>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Address Post -->
                    <div class="col-md-6">
                        <label asp-for="AddressPost" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                            <input asp-for="AddressPost" class="form-control" />
                        </div>
                        <span asp-validation-for="AddressPost" class="text-danger small"></span>
                    </div>

                    <!-- PIN -->
                    <div class="col-md-6">
                        <label asp-for="Pin" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-key"></i></span>
                            <input asp-for="Pin" class="form-control" />
                        </div>
                        <span asp-validation-for="Pin" class="text-danger small"></span>
                    </div>

                    <!-- Active Toggle -->
                    <div class="col-12 mt-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">
                                Active Company
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}