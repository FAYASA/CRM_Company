@model IEnumerable<seashore_CRM.Models.Entities.Company>

@{
    ViewData["Title"] = "Companies";
    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.TotalCount ?? Model.Count());
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<div class="container-fluid px-3">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center py-3">
        <div>
            <nav aria-label="breadcrumb" class="small mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Company List</li>
                </ol>
            </nav>
            <h1 class="h4 fw-bold mb-0 text-dark">
                Companies
                <span class="badge bg-light text-muted fw-normal ms-2 fs-6">
                    @Model.Count() total
                </span>
            </h1>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-danger btn-sm mb-2 px-3">
                <i class="bi bi-plus-lg me-1"></i> New Company
            </a>
        </div>
    </div>

    <!-- Search Box -->
    <div class="mb-3">
        <form method="get" class="input-group" role="search">
            <input type="search" name="q" value="@ViewBag.Query" class="form-control form-control-sm" placeholder="Search..." aria-label="Search">
            <button class="btn btn-sm btn-primary" type="submit">
                <i class="bi bi-search"></i>
            </button>
        </form>
    </div>

    <!-- Companies Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-secondary small text-uppercase">
                <tr>
                    <th>
                        <a asp-action="Index" asp-route-sort="name" asp-route-dir="@(ViewBag.Sort == "name" && ViewBag.Dir == "asc" ? "desc" : "asc")">Company Name</a>
                    </th>
                    <th style="width:80px;">
                        <a asp-action="Index" asp-route-sort="status" asp-route-dir="@(ViewBag.Sort == "status" && ViewBag.Dir == "asc" ? "desc" : "asc")">Status</a>
                    </th>
                    <th style="width:160px;">
                        <a asp-action="Index" asp-route-sort="location" asp-route-dir="@(ViewBag.Sort == "location" && ViewBag.Dir == "asc" ? "desc" : "asc")">Location</a>
                    </th>
                    <th style="width:100px;">Pin</th>
                    <th style="width:160px;">Website</th>
                    <th>Address</th>
                    <th style="width:140px;">Address Post</th>
                    <th style="width:80px;">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td class="fw-semibold">@company.CompanyName</td>
                        <td>
                            @if (!company.IsDeleted)
                            {
                                <span class="text-success">Active</span>
                            }
                            else
                            {
                                <span class="text-danger">Inactive</span>
                            }
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(company.City) ? "-" : company.City)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.Pin) ? "" : company.Pin)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.Website) ? "" : company.Website)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.Address) ? "" : company.Address)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.AddressPost) ? "" : company.AddressPost)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paging -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(page-1)" asp-route-q="@ViewBag.Query">Previous</a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@ViewBag.Query">@i</a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(page+1)" asp-route-q="@ViewBag.Query">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>