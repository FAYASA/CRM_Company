@model IEnumerable<seashore_CRM.Models.DTOs.CompanyListDto>

@{
    ViewData["Title"] = "Companies";

    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.TotalCount ?? Model.Count());
    var totalPages = (int)(ViewBag.TotalPages ?? 1);

    var currentSortBy = (ViewBag.SortBy as string) ?? "CompanyName";
    var currentSortOrder = (ViewBag.SortOrder as string) ?? "asc";
}

<div class="container-fluid px-3">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center py-3">
        <div>
            <nav aria-label="breadcrumb" class="small mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Company List</li>
                </ol>
            </nav>
            <h1 class="h4 fw-bold mb-0 text-dark">
                <i class="bi bi-building me-2"></i> Companies
                <span class="badge bg-light text-muted fw-normal ms-2 fs-6">
                    @Model.Count() total
                </span>
            </h1>
            <p class="small text-muted mb-0">
                Showing @((page - 1) * pageSize + 1) – @(Math.Min(page * pageSize, total)) of @total companies
            </p>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-danger btn-sm mb-2 px-3">
                <i class="bi bi-plus-lg me-1"></i> New Company
            </a>
        </div>
    </div>

    <!-- Search Box -->
    <div class="mb-3">
        <form method="get" class="input-group input-group-sm" role="search">
            <input type="search" name="q" value="@ViewBag.Query" class="form-control" placeholder="Search companies..." aria-label="Search">
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </form>
    </div>

    <!-- Companies Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle bg-white">
            <thead class="table-secondary small text-uppercase">
                <tr>
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="CompanyName"
                           asp-route-sortOrder="@(currentSortBy == "CompanyName" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-building me-1"></i> Company Name
                            @if (currentSortBy == "CompanyName")
                            {
                                <i class="bi ms-1 @(currentSortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="Status"
                           asp-route-sortOrder="@(currentSortBy == "Status" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-toggle-on me-1"></i> Status
                            @if (currentSortBy == "Status")
                            {
                                <i class="bi ms-1 @(currentSortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="City"
                           asp-route-sortOrder="@(currentSortBy == "City" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-geo-alt me-1"></i> City
                            @if (currentSortBy == "City")
                            {
                                <i class="bi ms-1 @(currentSortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="Address"
                           asp-route-sortOrder="@(currentSortBy == "Address" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-house me-1"></i> Address
                            @if (currentSortBy == "Address")
                            {
                                <i class="bi ms-1 @(currentSortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                            }
                        </a>
                    </th>
                    <th><i class="bi bi-mailbox me-1"></i> Address Post</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model)
                {
                    <tr>
                        <td class="fw-semibold">
                            <a asp-action="Details" asp-route-id="@company.Id" class="text-decoration-none">
                                @company.CompanyName
                            </a>
                        </td>
                        <td>
                            @if (company.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(company.City) ? Html.Raw("<span class='text-muted'>N/A</span>") : company.City)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.Address) ? Html.Raw("<span class='text-muted'>N/A</span>") : company.Address)</td>
                        <td>@(string.IsNullOrWhiteSpace(company.AddressPost) ? Html.Raw("<span class='text-muted'>N/A</span>") : company.AddressPost)</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-outline-secondary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paging -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(page - 1)" asp-route-q="@ViewBag.Query">Previous</a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-q="@ViewBag.Query">@i</a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@(page + 1)" asp-route-q="@ViewBag.Query">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>