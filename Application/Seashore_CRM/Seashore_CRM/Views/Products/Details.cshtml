@model seashore_CRM.Models.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <h4>@Model.ProductName</h4>
        <dl class="row">
            <dt class="col-sm-3 text-muted">Category</dt>
            <dd class="col-sm-9">@Model.Category?.CategoryName</dd>

            <dt class="col-sm-3 text-muted">Unit Price</dt>
            <dd class="col-sm-9">@Model.UnitPrice</dd>

            <dt class="col-sm-3 text-muted">Cost Price</dt>
            <dd class="col-sm-9">@Model.CostPrice</dd>

            <dt class="col-sm-3 text-muted">Tax %</dt>
            <dd class="col-sm-9">@Model.TaxPercentage</dd>

            <dt class="col-sm-3 text-muted">Active</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>