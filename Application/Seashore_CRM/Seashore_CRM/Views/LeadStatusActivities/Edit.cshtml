@model seashore_CRM.Models.Entities.LeadStatusActivity

@{
    ViewData["Title"] = "Edit Status Activity";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:800px;">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="LeadStatusId" class="form-label">Status</label>
                    <select asp-for="LeadStatusId" class="form-select" asp-items="ViewBag.Statuses"></select>
                </div>
                <div class="col-md-6">
                    <label asp-for="ActivityName" class="form-label">Activity Name</label>
                    <input asp-for="ActivityName" class="form-control" />
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-link">Cancel</a>
            </div>
        </form>
    </div>
</div>