<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seashore CRM</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Seashore_CRM.styles.css" asp-append-version="true" />
    <link href="~/css/site-custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="app-shell">
    <!-- Top Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark app-navbar">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-semibold d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    @* <img src="~/img/" alt="Seashore CRM Logo" style="height:32px;" class="me-2" /> *@
                    <span>Seashore CRM</span>
                </a>


                <div class="d-flex ms-auto align-items-center">
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <span class="text-light me-2">@User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-light">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>

            </div>
        </nav>
    </header>

    <!-- Two-column layout: sidebar + main -->
    <div class="d-flex">
        <aside class="bg-dark vh-100" style="width:260px;">
            @await Html.PartialAsync("_Sidebar")
        </aside>

        <main role="main" class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>