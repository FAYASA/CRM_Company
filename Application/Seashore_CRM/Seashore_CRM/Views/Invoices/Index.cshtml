@model IEnumerable<seashore_CRM.Models.Entities.Invoice>

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">+ New Invoice</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice #</th>
            <th>Sale</th>
            <th>Invoice Date</th>
            <th>Total</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var i in Model)
    {
        <tr>
            <td>@i.InvoiceNumber</td>
            <td>@i.SaleId</td>
            <td>@i.InvoiceDate</td>
            <td>@i.TotalAmount</td>
            <td>@i.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@i.Id">Details</a> |
                <a asp-action="RecordPayment" asp-route-invoiceId="@i.Id">Record Payment</a> |
                <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>