@model seashore_CRM.Models.Entities.Invoice

@{
    ViewData["Title"] = "Invoice Details";
}

<h1>Invoice Details</h1>

<div>
    <h4>@Model.InvoiceNumber</h4>
    <dl class="row">
        <dt class="col-sm-2">Sale</dt>
        <dd class="col-sm-10">@Model.SaleId</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.InvoiceDate</dd>

        <dt class="col-sm-2">Due</dt>
        <dd class="col-sm-10">@Model.DueDate</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <p>
        <a asp-action="RecordPayment" asp-route-invoiceId="@Model.Id" class="btn btn-primary">Record Payment</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </p>

    <h5>Payments</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Amount</th>
                <th>Date</th>
                <th>Method</th>
            </tr>
        </thead>
        <tbody>
        @if (ViewBag.Payments != null)
        {
            foreach (var p in (System.Collections.Generic.List<seashore_CRM.Models.Entities.Payment>)ViewBag.Payments)
            {
                <tr>
                    <td>@p.PaidAmount</td>
                    <td>@p.PaymentDate</td>
                    <td>@p.PaymentMethod</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>