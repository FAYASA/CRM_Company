@model seashore_CRM.Models.Entities.Invoice

@{
    ViewData["Title"] = "Invoice Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:1000px;">
    <div class="card-body">
        <h4>Invoice #@Model.InvoiceNumber</h4>
        <dl class="row">
            <dt class="col-sm-3 text-muted">Sale</dt>
            <dd class="col-sm-9">@Model.SaleId</dd>

            <dt class="col-sm-3 text-muted">Invoice Date</dt>
            <dd class="col-sm-9">@Model.InvoiceDate</dd>

            <dt class="col-sm-3 text-muted">Total</dt>
            <dd class="col-sm-9">@Model.TotalAmount</dd>

            <dt class="col-sm-3 text-muted">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="RecordPayment" asp-route-invoiceId="@Model.Id" class="btn btn-primary">Record Payment</a>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>