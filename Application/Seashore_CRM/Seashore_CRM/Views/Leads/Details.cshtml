@model seashore_CRM.Models.DTOs.LeadDto

@{
    ViewData["Title"] = "Lead Details";
}

<h1>Lead Details</h1>

<div>
    <h4>@Model.LeadType</h4>
    <dl class="row">
        <dt class="col-sm-2">Company</dt>
        <dd class="col-sm-10">@Model.CompanyId</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.ContactId</dd>

        <dt class="col-sm-2">Source</dt>
        <dd class="col-sm-10">@Model.SourceId</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.StatusName</dd>

        <dt class="col-sm-2">Priority</dt>
        <dd class="col-sm-10">@Model.Priority</dd>

        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">@Model.AssignedUserName</dd>

        <dt class="col-sm-2">Qualified</dt>
        <dd class="col-sm-10">@(Model.IsQualified ? "Yes" : "No")</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Qualify" asp-route-id="@Model.Id" class="btn btn-secondary">Qualify</a>

    <form asp-action="Convert" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-success">Convert to Opportunity</button>
    </form>

    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<div class="mt-4">
    <h4>Suggested Activities</h4>

    @if (ViewBag.SuggestedActivities != null && ((List<string>)ViewBag.SuggestedActivities).Any())
    {
        <div>
            @foreach (var a in (List<string>)ViewBag.SuggestedActivities)
            {
                <form asp-action="AddActivity" method="post" class="d-inline me-1">
                    <input type="hidden" name="leadId" value="@Model.Id" />
                    <input type="hidden" name="activityType" value="@a" />
                    <button type="submit" class="btn btn-sm btn-outline-primary">@a</button>
                </form>
            }
        </div>
    }
    else
    {
        <p>No suggested activities for this status.</p>
    }
</div>

<div class="mt-4">
    <h4>Recent Activities</h4>
    @if (ViewBag.Activities != null && ((List<seashore_CRM.Models.Entities.Activity>)ViewBag.Activities).Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var act in (List<seashore_CRM.Models.Entities.Activity>)ViewBag.Activities)
                {
                    <tr>
                        <td>@act.ActivityType</td>
                        <td>@act.ActivityDate</td>
                        <td>@act.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No activities recorded.</p>
    }
</div>