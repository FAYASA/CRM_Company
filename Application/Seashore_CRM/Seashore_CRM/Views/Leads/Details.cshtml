@model seashore_CRM.Models.DTOs.LeadDto

@{
    ViewData["Title"] = "Lead Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card">
    <div class="card-body">
        <h4 class="mb-3">@Model.LeadType</h4>
        <dl class="row mb-0">
            <dt class="col-sm-3 text-muted">Company</dt>
            <dd class="col-sm-9">@Model.CompanyId</dd>

            <dt class="col-sm-3 text-muted">Contact</dt>
            <dd class="col-sm-9">@Model.ContactId</dd>

            <dt class="col-sm-3 text-muted">Source</dt>
            <dd class="col-sm-9">@Model.SourceId</dd>

            <dt class="col-sm-3 text-muted">Status</dt>
            <dd class="col-sm-9">@Model.StatusName</dd>

            <dt class="col-sm-3 text-muted">Priority</dt>
            <dd class="col-sm-9">@Model.Priority</dd>

            <dt class="col-sm-3 text-muted">Assigned To</dt>
            <dd class="col-sm-9">@Model.AssignedUserName</dd>

            <dt class="col-sm-3 text-muted">Qualified</dt>
            <dd class="col-sm-9">@(Model.IsQualified ? "Yes" : "No")</dd>
        </dl>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="Qualify" asp-route-id="@Model.Id" class="btn btn-secondary">Qualify</a>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

<div class="row g-4 mt-3">
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="small text-uppercase text-muted mb-3">Suggested Activities</h6>
                @if (ViewBag.SuggestedActivities != null && ((List<string>)ViewBag.SuggestedActivities).Any())
                {
                    <div>
                        @foreach (var a in (List<string>)ViewBag.SuggestedActivities)
                        {
                            <form asp-action="AddActivity" method="post" class="d-inline me-1">
                                <input type="hidden" name="leadId" value="@Model.Id" />
                                <input type="hidden" name="activityType" value="@a" />
                                <button type="submit" class="btn btn-sm btn-outline-primary mb-2">@a</button>
                            </form>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted small mb-0">No suggested activities for this status.</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-body">
                <h6 class="small text-uppercase text-muted mb-3">Recent Activities</h6>
                @if (ViewBag.Activities != null && ((List<seashore_CRM.Models.Entities.Activity>)ViewBag.Activities).Any())
                {
                    <table class="table table-borderless mb-0">
                        <thead>
                            <tr class="text-muted small">
                                <th>Type</th>
                                <th>Date</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var act in (List<seashore_CRM.Models.Entities.Activity>)ViewBag.Activities)
                            {
                                <tr>
                                    <td>@act.ActivityType</td>
                                    <td>@act.ActivityDate</td>
                                    <td>@act.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted small mb-0">No activities recorded.</p>
                }
            </div>
        </div>
    </div>
</div>