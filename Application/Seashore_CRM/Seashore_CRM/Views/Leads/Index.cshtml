@model IEnumerable<seashore_CRM.Models.DTOs.LeadDto>

@{
    ViewData["Title"] = "Leads";
}

<h1>Leads</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Lead</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Id</th>
            <th>Lead Type</th>
            <th>Priority</th>
            <th>Status</th>
            <th>Assigned User</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var lead in Model)
    {
        <tr>
            <td>@lead.Id</td>
            <td>@lead.LeadType</td>
            <td>@lead.Priority</td>
            <td>@lead.StatusName</td>
            <td>@lead.AssignedUserName</td>
            <td>
                <a asp-action="Details" asp-route-id="@lead.Id" class="btn btn-sm btn-outline-primary">Details</a>
                <a asp-action="Edit" asp-route-id="@lead.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                <a asp-action="Delete" asp-route-id="@lead.Id" class="btn btn-sm btn-outline-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>