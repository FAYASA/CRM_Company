@using Seashore_CRM.ViewModels.User
@model List<UserListViewModel>

@{
    ViewData["Title"] = "User Management";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="card shadow-sm">
        <!-- Header -->
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-people-fill me-2"></i>
                User Management
            </h5>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Create New User
            </a>
        </div>

        <!-- Body -->
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Region</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>@u.Email</td>

                                <!-- Roles -->
                                <td>
                                    @if (u.Roles != null && u.Roles.Any())
                                    {
                                        foreach (var role in u.Roles)
                                        {
                                            <span class="badge bg-secondary me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>

                                <!-- Region -->
                                <td>@(string.IsNullOrEmpty(u.Region) ? "N/A" : u.Region)</td>

                                <!-- Status -->
                                <td>
                                    @if (u.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>

                                <!-- Actions -->
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-secondary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    <form asp-action="ToggleStatus" asp-route-id="@u.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()

                                        <button type="submit"
                                                class="btn btn-sm @(u.IsActive ? "btn-danger" : "btn-success")"
                                                onclick="return confirm('Are you sure you want to @(u.IsActive ? "Inactivate" : "Activate") this user?');">

                                            <i class="bi @(u.IsActive ? "bi-x-circle" : "bi-check-circle")"></i>
                                            @(u.IsActive ? "Inactivate" : "Activate")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>