@model List<Seashore_CRM.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "User Management";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="card shadow-sm">
        <!-- Header -->
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-people-fill me-2"></i>
                User Management
            </h5>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-person-plus-fill me-1"></i> Create New User
            </a>
        </div>

        <!-- Body -->
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>User Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.UserName</td>
                                <td>@u.Email</td>
                                <td>@string.Join(", ", u.Roles)</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-secondary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@u.Id" method="post" class="d-inline">
                                        <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>