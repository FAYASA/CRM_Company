@using Seashore_CRM.ViewModels.User
@model IEnumerable<UserListViewModel>

@{
    ViewData["Title"] = "User Management";

    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.TotalCount ?? Model.Count());
    var totalPages = (int)(ViewBag.TotalPages ?? 1);

    var currentSortBy = (ViewBag.SortBy as string) ?? "UserName";
    var currentSortOrder = (ViewBag.SortOrder as string) ?? "asc";
}

<div class="container-fluid px-3">

    <!-- PAGE HEADER -->
    <div class="d-flex justify-content-between align-items-center py-3">
        <div>
            <nav aria-label="breadcrumb" class="small mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </nav>

            <h1 class="h4 fw-bold mb-0 text-dark">
                <i class="bi bi-people-fill me-2"></i> Users
                <span class="badge bg-light text-muted fw-normal ms-2 fs-6">
                    @total total
                </span>
            </h1>

            <p class="small text-muted mb-0">
                Showing @((page - 1) * pageSize + 1) –
                @(Math.Min(page * pageSize, total)) of @total users
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-danger btn-sm px-3">
                <i class="bi bi-person-plus me-1"></i> New User
            </a>
        </div>
    </div>


    <!-- SEARCH BOX -->
    <div class="mb-3">
        <form method="get" class="input-group input-group-sm">
            <input type="search"
                   name="q"
                   value="@ViewBag.Query"
                   class="form-control"
                   placeholder="Search users..." />
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </form>
    </div>


    <!-- USERS TABLE -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle bg-white">
            <thead class="table-secondary small text-uppercase">
                <tr>

                    <!-- USERNAME -->
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="UserName"
                           asp-route-sortOrder="@(currentSortBy == "UserName" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">

                            <i class="bi bi-person me-1"></i> User Name

                            @if (currentSortBy == "UserName")
                            {
                                <i class="bi ms-1 @(currentSortOrder == "asc" ? "bi-caret-up-fill" : "bi-caret-down-fill")"></i>
                            }
                        </a>
                    </th>

                    <!-- EMAIL -->
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="Email"
                           asp-route-sortOrder="@(currentSortBy == "Email" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-envelope me-1"></i> Email
                        </a>
                    </th>

                    <!-- ROLES -->
                    <th><i class="bi bi-shield-lock me-1"></i> Roles</th>

                    <!-- REGION -->
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="Region"
                           asp-route-sortOrder="@(currentSortBy == "Region" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-geo-alt me-1"></i> Region
                        </a>
                    </th>

                    <!-- STATUS -->
                    <th>
                        <a asp-action="Index"
                           asp-route-q="@ViewBag.Query"
                           asp-route-sortBy="IsActive"
                           asp-route-sortOrder="@(currentSortBy == "IsActive" && currentSortOrder == "asc" ? "desc" : "asc")"
                           class="text-decoration-none text-dark">
                            <i class="bi bi-toggle-on me-1"></i> Status
                        </a>
                    </th>

                    <th style="width:140px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var u in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@u.UserName</td>
                            <td>@u.Email</td>

                            <!-- ROLES -->
                            <td>
                                @if (u.Roles != null && u.Roles.Any())
                                {
                                    foreach (var role in u.Roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                }
                                else
                                {
                                    @Html.Raw("<span class='text-muted'>N/A</span>")
                                }
                    </td>

                    <!-- REGION -->
                    <td>
                        @(string.IsNullOrWhiteSpace(u.Region)
                                                ? Html.Raw("<span class='text-muted'>N/A</span>")
                                                : u.Region)
                    </td>

                            <!-- STATUS -->
                            <td>
                        @if (u.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>

                            <!-- ACTIONS -->
                            <td class="text-center">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit"
                                       asp-route-id="@u.Id"
                                       class="btn btn-outline-primary"
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    <form asp-action="ToggleStatus"
                                          asp-route-id="@u.Id"
                                          method="post"
                                          class="d-inline">
                                        @Html.AntiForgeryToken()

                                        <button type="submit"
                                                class="btn btn-sm @(u.IsActive ? "btn-outline-danger" : "btn-outline-success")"
                                                title="@(u.IsActive ? "Deactivate User" : "Activate User")"
                                                onclick="return confirm('Are you sure you want to @(u.IsActive ? "Deactivate" : "Activate") this user?');">

                                            <i class="bi @(u.IsActive ? "bi-person-x" : "bi-person-check")"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">
                            No users found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <!-- PAGINATION -->
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page - 1)"
                       asp-route-q="@ViewBag.Query">
                        Previous
                    </a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-q="@ViewBag.Query">@i</a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page + 1)"
                       asp-route-q="@ViewBag.Query">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }

</div>