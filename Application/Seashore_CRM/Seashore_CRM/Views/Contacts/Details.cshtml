@model seashore_CRM.Models.DTOs.ContactDetailDto

@{
    ViewData["Title"] = "Contact Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="card shadow-sm mx-auto" style="max-width:900px;">
        <!-- Header -->
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-person-lines-fill me-2"></i>
                Contact Details
            </h5>
        </div>

        <!-- Body -->
        <div class="card-body">
            <h4 class="fw-bold mb-3">@Model.ContactName</h4>

            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-building me-1"></i> Company
                </dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.CompanyName) ? Model.CompanyName : Html.Raw("<span class='text-muted'>N/A</span>"))</dd>

                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-telephone me-1"></i> Phone
                </dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Phone) ? Model.Phone : Html.Raw("<span class='text-muted'>N/A</span>"))</dd>

                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-envelope me-1"></i> Email
                </dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : Html.Raw("<span class='text-muted'>N/A</span>"))</dd>

                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-phone me-1"></i> Mobile
                </dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Mobile) ? Model.Mobile : Html.Raw("<span class='text-muted'>N/A</span>"))</dd>

                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-briefcase me-1"></i> Designation
                </dt>
                <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Designation) ? Model.Designation : Html.Raw("<span class='text-muted'>N/A</span>"))</dd>

                <dt class="col-sm-3 text-muted">
                    <i class="bi bi-toggle-on me-1"></i> Status
                </dt>
                <dd class="col-sm-9">
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </dd>
            </dl>

            <!-- Buttons -->
            <div class="d-flex gap-2 mt-4 justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>