@model seashore_CRM.Models.Entities.Contact

@{
    ViewData["Title"] = "Contact Details";
}

@await Html.PartialAsync("_PageHeader")

<div class="card mx-auto" style="max-width:900px;">
    <div class="card-body">
        <h4>@Model.Contact_Name @Model.Contact_Name</h4>
        <dl class="row">
            <dt class="col-sm-3 text-muted">Company</dt>
            <dd class="col-sm-9">@Model.Company?.CompanyName</dd>

            <dt class="col-sm-3 text-muted">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3 text-muted">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>

        <div class="d-flex gap-2 mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>