@model IEnumerable<seashore_CRM.Models.DTOs.ContactListDto>

@{
    ViewData["Title"] = "Contacts";

    var page = (int)(ViewBag.Page ?? 1);
    var pageSize = (int)(ViewBag.PageSize ?? 20);
    var total = (int)(ViewBag.TotalCount ?? Model.Count());
    var totalPages = (int)(ViewBag.TotalPages ?? 1);
}

<div class="container-fluid px-3">

    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center py-3">
        <div>
            <nav aria-label="breadcrumb" class="small mb-2">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item">
                        <a asp-action="Index" class="text-decoration-none">Home</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Contact List</li>
                </ol>
            </nav>

            <h1 class="h4 fw-bold mb-0 text-dark">
                <i class="bi bi-people me-2"></i> Contacts
                <span class="badge bg-light text-muted fw-normal ms-2 fs-6">
                    @Model.Count() total
                </span>
            </h1>

            <p class="small text-muted mb-0">
                Showing @((page - 1) * pageSize + 1) –
                @(Math.Min(page * pageSize, total)) of @total contacts
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn btn-danger btn-sm px-3">
                <i class="bi bi-plus-lg me-1"></i> New Contact
            </a>
        </div>
    </div>

    <!-- Search Box -->
    <div class="mb-3">
        <form method="get" class="input-group input-group-sm">
            <input type="search"
                   name="q"
                   value="@ViewBag.Query"
                   class="form-control"
                   placeholder="Search contacts..." />
            <button class="btn btn-primary" type="submit">
                <i class="bi bi-search"></i>
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
        </form>
    </div>

    <!-- Contacts Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle bg-white">
            <thead class="table-secondary small text-uppercase">
                <tr>
                    <th>Status</th>
                    <th>Contact Name</th>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Designation / Role</th>
                    <th>Phone</th>
                    <th>Mobile</th>
                    <th style="width:120px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var c in Model)
                {
                    <tr>

                        <!-- Status -->
                        <td>
                            @if (c.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                    </td>

                    <!-- Contact Name -->
                    <td class="fw-semibold">
                        <a asp-action="Details"
                           asp-route-id="@c.Id"
                           class="text-decoration-none">
                            @c.CompanyName
                        </a>
                    </td>

                    <!-- Company -->
                    <td>
                        @Html.Raw(string.IsNullOrWhiteSpace(c.CompanyName)
                                                ? "<span class='text-muted'>N/A</span>"
                                                : c.CompanyName)
                    </td>

                    <!-- Email -->
                    <td>
                        @(string.IsNullOrWhiteSpace(c.Email)
                                                ? Html.Raw("<span class='text-muted'>N/A</span>")
                                                : c.Email)
                                                      </td>

                    <!-- Designation -->
                    <td>
                        @(string.IsNullOrWhiteSpace(c.Designation)
                                                ? Html.Raw("<span class='text-muted'>N/A</span>")
                                                : c.Designation)
                                                            </td>

                    <!-- Phone -->
                    <td>
                        @(string.IsNullOrWhiteSpace(c.Phone)
                                                ? Html.Raw("<span class='text-muted'>N/A</span>")
                                                : c.Phone)
                                                      </td>

                    <!-- Mobile -->
                    <td>
                        @(string.IsNullOrWhiteSpace(c.Mobile)
                                                ? Html.Raw("<span class='text-muted'>N/A</span>")
                                                : c.Mobile)
                    </td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details"
                                   asp-route-id="@c.Id"
                                   class="btn btn-outline-secondary"
                                   title="View">
                                    <i class="bi bi-eye"></i>
                                </a>

                                <a asp-action="Edit"
                                   asp-route-id="@c.Id"
                                   class="btn btn-outline-primary"
                                   title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                        </td>

                    </tr>
                                }
            </tbody>
        </table>
    </div>

    <!-- Paging -->
    @if (totalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(page == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page - 1)"
                       asp-route-q="@ViewBag.Query">
                        Previous
                    </a>
                </li>

                @for (var i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-q="@ViewBag.Query">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page + 1)"
                       asp-route-q="@ViewBag.Query">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }

</div>