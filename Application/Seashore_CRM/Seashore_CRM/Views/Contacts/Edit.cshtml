@model seashore_CRM.Models.DTOs.ContactUpdateDto

@{
    ViewData["Title"] = "Edit Contact";
}

@await Html.PartialAsync("_PageHeader")

<div class="container my-4">
    <div class="card shadow-sm mx-auto form-container">

        <!-- Header -->
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-person-lines-fill me-2"></i>
                Edit Contact
            </h5>
        </div>

        <!-- Body -->
        <div class="card-body">
            <form asp-action="Edit" method="post" id="contactForm">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RowVersion" />

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">

                    <!-- Contact Name -->
                    <div class="col-md-6">
                        <label asp-for="ContactName" class="form-label fw-semibold required">Contact Name</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                            <input asp-for="ContactName"
                                   class="form-control"
                                   placeholder="Enter contact name" />
                        </div>
                        <span asp-validation-for="ContactName" class="text-danger small"></span>
                    </div>

                    <!-- Company Dropdown -->
                    <div class="col-md-6">
                        <label asp-for="CompanyId" class="form-label fw-semibold required">Company</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-building"></i>
                            </span>
                            <select asp-for="CompanyId"
                                    asp-items="ViewBag.Companies"
                                    class="form-select">
                                <option value="">-- Select Company --</option>
                            </select>
                        </div>
                        <span asp-validation-for="CompanyId" class="text-danger small"></span>
                    </div>

                    <!-- Designation -->
                    <div class="col-md-6">
                        <label asp-for="Designation" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-briefcase"></i>
                            </span>
                            <input asp-for="Designation"
                                   class="form-control"
                                   placeholder="Manager, Director, Engineer..." />
                        </div>
                        <span asp-validation-for="Designation" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                            <input asp-for="Email"
                                   type="email"
                                   class="form-control"
                                   placeholder="Enter email address" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-telephone"></i>
                            </span>
                            <input asp-for="Phone"
                                   type="tel"
                                   class="form-control"
                                   placeholder="Enter phone number" />
                        </div>
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <!-- Mobile -->
                    <div class="col-md-6">
                        <label asp-for="Mobile" class="form-label fw-semibold"></label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-phone"></i>
                            </span>
                            <input asp-for="Mobile"
                                   type="tel"
                                   class="form-control"
                                   placeholder="Enter mobile number" />
                        </div>
                        <span asp-validation-for="Mobile" class="text-danger small"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6">
                        <label asp-for="IsActive" class="form-label fw-semibold"></label>
                        <div class="form-check mt-2">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" for="IsActive">Active</label>
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary px-4" id="submitBtn">
                        <span class="spinner-border spinner-border-sm d-none me-2" id="submitSpinner"></span>
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.getElementById("contactForm")
            .addEventListener("submit", function (e) {

                var form = $(this);

                // If form is NOT valid, stop loading state
                if (!form.valid()) {
                    return;
                }

                document.getElementById("submitSpinner")
                    .classList.remove("d-none");

                document.getElementById("submitBtn")
                    .setAttribute("disabled", "disabled");
            });
    </script>
}