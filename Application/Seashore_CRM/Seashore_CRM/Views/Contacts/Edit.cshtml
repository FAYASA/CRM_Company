@model seashore_CRM.Models.Entities.Contact

@{
    ViewData["Title"] = "Edit Contact";
}

<h1>Edit Contact</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Contact_Name" class="form-label"></label>
        <input asp-for="Contact_Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="CompanyId" class="form-label"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies">
            <option value="">-- Select Company --</option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"></label>
        <input asp-for="Phone" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>