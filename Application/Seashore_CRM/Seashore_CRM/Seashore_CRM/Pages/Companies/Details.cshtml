@page "{id:int}"
@model Seashore_CRM.Pages.Companies.DetailsModel
@{
    ViewData["Title"] = "Company Details";
}

<h1>Company Details</h1>

<div>
    <h4>@Model.Company.CompanyName</h4>
    <dl class="row">
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Company.Address</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.Company.City</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Company.Country</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Company.Phone</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Company.Email</dd>
    </dl>

    <a asp-page="Edit" asp-route-id="@Model.Company.Id" class="btn btn-primary">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>